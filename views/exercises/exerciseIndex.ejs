<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs')  %>
</head>

<body id="indexPageBody">
    <%- include('../partials/header.ejs')  %>
    

    <header class="secondHeader">
        <h1 class="topHeaderOnes"><%= tabTitle.toUpperCase() %> Exercises</h1>
        <nav id="indexPageNav">
            <a class="secondHyperNavs" href="/home">Home</a>
            <a class='secondHyperNavs' href="/<%= user %>/<%= tabTitle %>/new">New</a>
        </nav>
    </header>

    <div id="indexPageDiv">
        <% Exercise.forEach(ex => {%>
        <a id="indexPageExerciseHyper" href="/<%= ex.user_id %>/<%= ex.muscleGroup %>/<%= ex.id %>  ">
            <h1 id="indexPageExerciseHeader"><%= ex.exercise %> </h1>
            <p>Sets: <%= ex.sets %></p>
            <p>Reps: <%= ex.reps %></p>
            <p>RPE: <%= ex.rpe %></p>
            <p>Rest: <%= ex.rest %></p>
            <p>Weight: <%= ex.weight %> </p>
            <p>Notes: <%= ex.notes %> </p>
            <p>Completed: <%= ex.completed %> </p>
            <p>Date: <%= ex.createdAt %> </p>
            <form action="/<%= ex.user_id %>/<%= ex.muscleGroup %>/<%= ex.id  %>?_method=DELETE" method="POST">
                <input type="submit" value="Delete" id="deleteExercise">
            </form>
        </a>
        <%});  %>
    </div>
    <%- include("../partials/footer.ejs")%>
</body>

</html>